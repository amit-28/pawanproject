<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.explistviewsample.MyTrucksActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@drawable/rounded_corner">

            <CheckBox
                android:id="@+id/tractor_trailer_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <ListView
                android:id="@+id/lnr_tractor_trailer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tractor_trailer_checkBox"></ListView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_weight="50"
            android:background="@drawable/rounded_corner">

            <CheckBox
                android:id="@+id/payload_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <ListView
                android:id="@+id/lnr_payload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/payload_checkBox"></ListView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_weight="50">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@drawable/rounded_corner">

            <CheckBox
                android:id="@+id/fixed_container_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <ListView
                android:id="@+id/lnr_fixed_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fixed_container_checkBox"></ListView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_weight="50"
            android:background="@drawable/rounded_corner">

            <CheckBox
                android:id="@+id/others_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <ListView
                android:id="@+id/lnr_others"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/others_checkBox"></ListView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>